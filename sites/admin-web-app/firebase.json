{
	"hosting": [
		{
			"cleanUrls": true,
			"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
			"public": "out",
			"rewrites": [
				{
					"source": "/resource/**/all",
					"destination": "/resource/[resource_name]/all.html"
				},
				{
					"source": "/resource/**/create",
					"destination": "/resource/[resource_name]/create.html"
				},
				{
					"source": "/resource/**/**/edit",
					"destination": "/resource/[resource_name]/[document_id]/edit.html"
				}
			],
			"site": "app-wallot-admin-production"
		},
		{
			"cleanUrls": true,
			"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
			"public": "out",
			"rewrites": [
				{
					"source": "/resource/**/all",
					"destination": "/resource/[resource_name]/all.html"
				},
				{
					"source": "/resource/**/create",
					"destination": "/resource/[resource_name]/create.html"
				},
				{
					"source": "/resource/**/**/edit",
					"destination": "/resource/[resource_name]/[document_id]/edit.html"
				}
			],
			"site": "app-wallot-admin-staging"
		}
	]
}
