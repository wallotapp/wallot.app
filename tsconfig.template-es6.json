{
	"compilerOptions": {
		// Start -- Shared compiler options for the entire workspace
		"alwaysStrict": true,
		"esModuleInterop": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		// End -- Shared compiler options for the entire workspace

		// Start -- Compiler options for ES6 modules
		"module": "esnext",
		"moduleResolution": "node",
		"target": "es6"
		// End -- Compiler options for ES6 modules
	},
	"extends": "./tsconfig.template-base.json"
}
