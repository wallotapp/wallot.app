{
  "compilerOptions": {
    // Start -- Shared compiler options for the entire workspace
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    // End -- Shared compiler options for the entire workspace

    // Start -- Compiler options for ES6 modules
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    // End -- Compiler options for ES6 modules

    // Start -- Compiler options for JavaScript SDKs
    "baseUrl": ".",
    "outDir": ".",
    "paths": {
      "*": ["node_modules", "../../node_modules"]
    },
    "rootDir": "."
    // End -- Compiler options for JavaScript SDKs
  },
  "exclude": ["**/*.js"],
  "extends": "../../tsconfig.template-es6.json"
}
